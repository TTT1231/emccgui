{
   "extends": "./tsconfig.base.json",
   "compilerOptions": {
      "moduleResolution": "node",

      // 混合环境：需要 Node.js API 和 DOM API
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "types": ["node", "electron"],

      // 路径别名
      "paths": {
         "@preload/*": ["src/preload/*"],
         "@shared/*": ["src/shared/*"],
         "@resources/*": ["resources/*"]
      },

      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.preload.tsbuildinfo"
   },
   "include": ["src/preload/**/*.ts", "src/preload/**/*.d.ts"]
}
