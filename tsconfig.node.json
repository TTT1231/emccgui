{
   "extends": "./tsconfig.base.json",
   "compilerOptions": {
      "moduleResolution": "node",

      // Node.js 环境
      "lib": ["ESNext"],
      "types": ["node", "electron", "@electron-forge/plugin-vite/forge-vite-env"],

      // 路径别名
      "paths": {
         "@main/*": ["src/main/*"],
         "@shared/*": ["src/shared/*"],
         "@resources/*": ["resources/*"]
      },

      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo"
   },
   "include": [
      "src/main/**/*.ts",
      "src/main/**/*.d.ts",
      "src/shared/**/*.ts",
      "src/shared/**/*.d.ts",
      "forge.config.ts",
      "forge.env.d.ts",
      "vite.main.config.ts",
      "vite.preload.config.ts",
      "vite.common.config.ts"
   ],
   "exclude": ["src/renderer/**"]
}
